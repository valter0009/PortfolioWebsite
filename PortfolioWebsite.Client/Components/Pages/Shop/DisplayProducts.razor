

@inherits DisplayProductsBase

@foreach (var item in Products)
{
	<div class="col-lg-3 mb-3 d-flex align-items-stretch">
		<a href="/ProductDetails/@item.Id">
			<div class="card flex-grow-1 h-100">
				<img class=" flex-grow-1 object-fit-cover img-fluid" src="@item.ImageURL" />
				<div class="card-body">
					<h5 class="card-title mb-3">
						@item.Name
					</h5>
					<p class="card-text">
						<b>@item.Price.ToString("C", new CultureInfo("en-US"))</b>
					</p>
				</div>
			</div>
		</a>
	</div>
}