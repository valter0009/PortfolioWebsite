
@inherits LayoutComponentBase
@inject NavigationManager NavManager

<div class="d-flex flex-column">

    @if (IsHomePage())
    {
        <div class="slideshow-container">
            <Slideshow />
        </div>
    }
    
    <NavMenu  />
    
    
    <main class="mx-5 pt-5 border-end border-start border-1 border-light-subtle">
        <div class="rest" id="rest"></div>
        <article class="content px-3 d-flex flex-column">
            @Body
        </article>
        
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private bool IsHomePage()
    {
        return NavManager != null && NavManager.Uri == NavManager.BaseUri;
    }
    protected override void OnInitialized()
    {

       
    }

  
}