@rendermode InteractiveAuto
<HxNavbar CssClass="bg-body-tertiary px-4 sticky-top gothic-font  ">
    
    <HxNavbarBrand CssClass="mb-1"> <img src="/img/brand.svg" alt="brand" width="150"  /> </HxNavbarBrand>
    <HxNavbarToggler Spinner="false" TooltipWrapperCssClass="@GetRotateClass()" @onclick="ToggleHamburger" />
    <HxNavbarCollapse CssClass="mt-2">
        <HxNav CssClass=" ms-auto mb-2 fs-5 ">
            <HxNavLink CssClass="mx-lg-4 hover-underline-animation" Href="">home</HxNavLink>
            <HxNavLink CssClass="mx-lg-4 hover-underline-animation" Href="gallery">gallery</HxNavLink>            
            <HxNavLink CssClass="mx-lg-4 hover-underline-animation" Href="shop">shop</HxNavLink>
            <HxNavLink CssClass="mx-lg-4 hover-underline-animation" Href="contact">contact</HxNavLink>
        </HxNav>
       
    </HxNavbarCollapse>
    
    </HxNavbar>

@code {
    private bool isHamburgerOpen = false;

    private void ToggleHamburger()
    {
        isHamburgerOpen = !isHamburgerOpen;
    }

    private string GetRotateClass()
    {
        return isHamburgerOpen ? "rotate" : "rotate-back";
    }
}